{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": [
    "standard",
    "standard-react"
  ],
  "env": {
    "browser": true,
    "jquery": true
  },
  "globals": {
    "S": true,
    "Beacon": true,
    "Redactor": true,
    "config": true,
    "process": true,
    "global": true,
    "app": true,
    "__DEV__": true,
    "FormData": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "comma-dangle": 0,
    "indent": [
      "error",
      2,
      {
        "ignoredNodes": [
          "TemplateLiteral"
        ],
        "SwitchCase": 1
      }
    ],
    "template-curly-spacing": "off",
    "prefer-reflect": "off",
    "react/prop-types": "off",
    "no-multi-str": "off",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-unexpected-multiline": "warn",
    "max-len": [
      "warn",
      {
        "code": 120
      }
    ],
    "max-lines": [
      "warn",
      {
        "skipComments": true,
        "skipBlankLines": true,
        "max": 320
      }
    ],
    "react/display-name": "off",
    "react/jsx-uses-vars": 1,
    "react/jsx-tag-spacing": [
      "warn",
      {
        "closingSlash": "never",
        "beforeSelfClosing": "never",
        "afterOpening": "never",
        "beforeClosing": "never"
      }
    ],
    "react/forbid-prop-types": "off"
  }
}
